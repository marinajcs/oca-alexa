{
  "type": "APL",
  "version": "1.5",
  "theme": "dark",
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Sequence",
        "data": "${payload.datosFichas.properties.jugadores}",
        "width": "100%",
        "height": "100%",
        "scrollDirection": "vertical",
        "items": [
          {
            "type": "Frame",
            "direction": "row",
            "backgroundColor": "${data.codigo}",
            "height": "120dp",
            "width": "100%",
            "items": [
              {
                "type": "Text",
                "id": "${data.id}",
                "text": "Jugador ${data.id}",
                "color": "white",
                "fontSize": "30dp"
              }
            ]
          }
        ]
      }
    ]
  }
}