{
 "type": "APL",
 "version": "1.6",
 "mainTemplate": {
    "parameters": ["payload"],
    "items": [
      {
        "type": "Container",
        "width": "100%",
        "height": "100%",
        "alignItems": "stretch",
        "justifyContent": "spaceBetween",
        "items": [
          {
            "type": "Text",
            "text": "${payload.topText}",
            "color": "#FFFFFF",
            "fontSize": "24dp",
            "alignSelf": "center"
          },
          {
            "type": "Container",
            "width": "100dp",
            "height": "100dp",
            "borderRadius": "50%",
            "backgroundColor": "${payload.circleColor}",
            "alignItems": "center",
            "justifyContent": "center",
            "items": [
              {
                "type": "Text",
                "text": "${payload.circleText}",
                "color": "#FFFFFF",
                "fontSize": "20dp"
              }
            ]
          },
          {
            "type": "Sequence",
            "id": "fichaSequence",
            "width": "100dp",
            "height": "100%",
            "data": "${payload.fichas}",
            "items": [
              {
                "type": "Container",
                "width": "100dp",
                "height": "100dp",
                "borderRadius": "50%",
                "backgroundColor": "${data.color}",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                 {
                    "type": "Text",
                    "text": "${data.texto}",
                    "color": "#FFFFFF",
                    "fontSize": "20dp"
                 }
                ]
              }
            ]
          }
        ]
      }
    ]
 }
}
