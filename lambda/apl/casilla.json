{
 "type": "APL",
 "version": "1.6",
 "mainTemplate": {
    "parameters": [
        "payload"
    ],
    "items": [
      {
        "type": "Container",
        "width": "100%",
        "height": "100%",
        "items": [
          {
            "type": "Text",
            "text": "${payload.datosCasilla.properties.topText}",
            "color": "#FFFFFF",
            "fontSize": "24dp",
            "alignSelf": "center"
          },
          {
            "type": "Image",
            "source": "${payload.datosCasilla.properties.casillaImg}",
            "scale": "best-fill",
            "width": "80%",
            "height": "90%",
            "position": "absolute",
            "top": "35dp",
            "right": "10dp"
          },
          {
            "type": "Frame",
            "width": "20%",
            "height": "20%",
            "borderRadius": "50%",
            "backgroundColor": "${payload.datosCasilla.properties.circleColor}",
            "alignSelf": "left",
            "alignItems": "left",
            "items": [
              {
                "type": "Text",
                "text": "${payload.datosCasilla.properties.circleId}",
                "color": "#FFFFFF",
                "fontSize": "20dp"
              }
            ]
          },
          {
            "type": "Sequence",
            "id": "fichaSequence",
            "width": "15%",
            "height": "70%",
            "data": "${payload.datosCasilla.properties.fichas}",
            "items": [
              {
                "type": "Frame",
                "direction": "row",
                "width": "auto",
                "height": "auto",
                "borderRadius": "50%",
                "backgroundColor": "${data.codigo}",
                "alignItems": "left",
                "justifyContent": "center",
                "items": [
                 {
                    "type": "Text",
                    "text": "${data.id}",
                    "color": "#FFFFFF",
                    "fontSize": "20dp"
                 }
                ]
              }
            ]
          }
        ]
      }
    ]
 }
}
